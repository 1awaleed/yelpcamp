<%include ../partials/header%>


<div class="container">
	<h1 style="text-align: center;">Add New Comment to "<%=campground.name%>"</h1>

		<div style="max-width: 250px; margin: 25px auto;">
			<!-- action contains the post route that is included in the app.js -->
			<form method="POST" action="/campgrounds/<%=campground._id%>/comments">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn-outline-primary btn-block">Submit!</button>
				</div>
			</form>
			<div class="d-flex justify-content-center">
				<a href="/campgrounds">Go Back</a>
			</div>	
		</div>
		
		

</div>

<%include ../partials/footer%>