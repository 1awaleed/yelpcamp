<%include ../partials/header%>


<div class="container">
	<h1 style="text-align: center;">Edit <%=campground.name%></h1>

		<div style="max-width: 250px; margin: 25px auto;">
			<!-- action contains the post route that is included in the app.js -->
			<form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.name%>" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.image%>" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.description%>" name="description">
				</div>
				<div class="form-group">
					<button class="btn-outline-primary btn-block">Submit!</button>
				</div>
			</form>
			<div class="d-flex justify-content-center">
				<a href="/campgrounds">Go Back</a>
			</div>	
		</div>
		
		

</div>

<%include ../partials/footer%>